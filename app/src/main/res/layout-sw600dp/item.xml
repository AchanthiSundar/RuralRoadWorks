<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	
	<TextView
	    android:id="@+id/caption"
	    android:layout_width="150dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="10dp"
	    android:text="Block"
	    android:textColor="#000000"
	    android:textSize="25sp" />
	
	<TextView
	    android:id="@+id/description"
	    android:layout_width="150dp"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/caption"
	    android:layout_marginLeft="10dp"
	    android:text="Block2"
	    android:textSize="22sp"
	    android:textColor="#000000" />

	<ImageView
	    android:id="@+id/image"
	    android:layout_width="75dp"
	    android:layout_height="70dp"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true" />

	<TextView
	    android:id="@+id/stage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/image"
	    android:layout_alignLeft="@+id/description"
	    android:visibility="gone"/>

	<TextView
	    android:id="@+id/qualityParamater"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/stage"
	    android:layout_alignBottom="@+id/stage"
	    android:layout_toRightOf="@+id/stage"
	    android:visibility="gone" />

	<TextView
	    android:id="@+id/qualityParamaterValue"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/qualityParamater"
	    android:layout_alignBottom="@+id/qualityParamater"
	    android:layout_toRightOf="@+id/qualityParamater"
	   android:visibility="gone" />

	<TextView
	    android:id="@+id/remarks"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/qualityParamaterValue"
	    android:layout_alignBottom="@+id/qualityParamaterValue"
	    android:layout_toRightOf="@+id/qualityParamaterValue"
	    android:visibility="gone"/>

	<TextView
	    android:id="@+id/workid"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/remarks"
	    android:visibility="gone" />
		
</RelativeLayout>
